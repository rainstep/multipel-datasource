<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
		"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<context id="context1">
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<jdbcConnection connectionURL="jdbc:mysql://127.0.0.1:3306/db_b"
						driverClass="com.mysql.jdbc.Driver"
						userId="root" password="123456" />
		<javaModelGenerator targetPackage="com.example.multipledatasource.model.b" targetProject="src/main/java" />
		<sqlMapGenerator targetPackage="mapper.b" targetProject="src/main/resources" />
		<javaClientGenerator targetPackage="com.example.multipledatasource.mapper.b" targetProject="src/main/java" type="XMLMAPPER" />


		<table tableName="table_b1">
			<generatedKey column="id" sqlStatement="MySql" identity="true"/>
		</table>

	</context>
</generatorConfiguration>